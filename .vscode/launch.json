{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outDir": "out",
			"preLaunchTask": "npm"
		},
		{
            "name": "Debug Launcher",
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["--harmony"],
            "program": "${workspaceRoot}/adapter.js",
            "stopOnEntry": false
		}
	]
}