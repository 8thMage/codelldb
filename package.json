{
    "name": "vscode-lldb",
    "displayName": "LLDB Debugger",
    "version": "0.1.2",
    "publisher": "vadimcn",
    "description": "LLDB front-end for VSCode",
    "license": "MIT",
    "author": {
        "name": "vadimcn"
    },
    "engines": {
        "vscode": "^1.1.1"
    },
    "icon": "lldb.png",
    "categories": [
        "Debuggers"
    ],
    "keywords": [
        "Debug",
        "Debugger",
        "LLDB"
    ],
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/vadimcn/vscode-lldb.git"
    },
    "bugs": {
        "url": "https://github.com/vadimcn/vscode-lldb/issues"
    },
    "devDependencies": {
        "vscode-debugadapter-testsupport": "^1.8.0",
        "vscode-debugprotocol": "^1.8.0",
        "typescript": "^1.8.10",
        "mocha": "^2.4.5"
    },
    "scripts": {
        "build:debuggee": "c++ tests/debuggee.cpp -pthread -std=c++11 -g -o tests/out/debuggee",
        "build:tests": "tsc -p ./tests",
        "watch:tests": "tsc -w -p ./tests",
        "run:tests": "mocha -u tdd --timeout 5000 ./tests/out",
        "test": "npm run build:debuggee && npm run build:tests && npm run run:tests"
    },
    "contributes": {
        "debuggers": [
            {
                "type": "lldb",
                "label": "LLDB Debugger",
                "enableBreakpointsFor": {
                    "languageIds": [
                        "ada",
                        "c",
                        "cpp",
                        "d",
                        "fortan",
                        "objective-c",
                        "pascal",
                        "rust"
                    ]
                },
                "runtime": "node",
                "program": "adapter.js",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Path to the program to debug."
                            },
                            "args": {
                                "type": ["array", "string"],
                                "description": "Program arguments.",
                                "default": []
                            },
                            "cwd": {
                                "type": "string",
                                "description": "Program working directory.",
                                "default": null
                            },
                            "env": {
                                "type": "object",
                                "description": "Additional environment variables.",
                                "default": []
                            },
                            "stdio": {
                                "type": [
                                    "null",
                                    "string",
                                    "array",
                                    "object"
                                ],
                                "description": "Where to attach stdio streams: null = debugger console, '*' = open a new terminal, '<path>' = attach to a file/tty/fifo.",
                                "default": "*"
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop debuggee after launch.",
                                "default": true
                            },
                            "initCommands": {
                                "type": "array",
                                "description": "Initialization commands executed upon debugger startup.",
                                "default": []
                            },
                            "preRunCommands": {
                                "type": "array",
                                "description": "Commands executed just before the program is launched.",
                                "default": []
                            },
                            "sourceLanguages": {
                                "type": "array",
                                "description": "A list of source languages used in the program.",
                                "default": []
                            }
                        }
                    },
                    "attach": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Path to the program to attach to."
                            },
                            "pid": {
                                "type": "number",
                                "description": "Process id to attach to."
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop debuggee after attach.",
                                "default": true
                            },
                            "initCommands": {
                                "type": "array",
                                "description": "Initialization commands executed upon debugger startup.",
                                "default": []
                            },
                            "preRunCommands": {
                                "type": "array",
                                "description": "Commands executed just before the program is attached to.",
                                "default": []
                            },
                            "sourceLanguages": {
                                "type": "array",
                                "description": "A list of source languages used in the program.",
                                "default": []
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "name": "Debug",
                        "type": "lldb",
                        "request": "launch",
                        "program": "${workspaceRoot}/<your program>",
                        "args": []
                    }
                ]
            }
        ]
    }
}