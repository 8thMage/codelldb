{
    "name": "lldb-adapter",
    "displayName": "LLDB Debugger",
    "version": "0.0.1",
    "publisher": "vadimcn",
    "description": "Native debugging in Visual Studio code via the LLDB debugger engine.",
    "license": "MIT",
    "author": {
        "name": "vadimcn"
    },
    "engines": {
        "vscode": "^0.10.7"
    },
    "icon": "lldb.png",
    "categories": [
        "Debuggers"
    ],
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/vadimcn/vscode-lldb.git"
    },
    "bugs": {
        "url": "https://github.com/vadimcn/vscode-lldb/issues"
    },
    "devDependencies": {
        "vscode-debugadapter-testsupport": "^1.8.0",
        "typescript": "^1.8.10",
        "mocha": "^2.4.5"
    },
    "scripts": {
        "build:debuggee": "c++ tests/debuggee.cpp -pthread -std=c++11 -g -o tests/out/debuggee",
        "build:tests": "npm run build:debuggee && tsc -p ./tests",
        "watch:tests": "tsc -w -p ./tests",
        "test": "npm run build:tests && mocha -u tdd --timeout 5000 ./tests/out"
    },
    "contributes": {
        "debuggers": [
            {
                "type": "lldb",
                "label": "LLDB debugger",
                "enableBreakpointsFor": {
                    "languageIds": [
                        "rust",
                        "c",
                        "cpp",
                        "d",
						"objective-c",
						"fortan",
						"pascal",
						"ada"
                    ]
                },

                "runtime": "node",
                "program": "adapter.js",

                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Path of the program to debug."
                            },
                            "args": {
                                "type": "array",
                                "description": "Program arguments.",
                                "default": []
                            },
                            "cwd": {
                                "type": "string",
                                "description": "Program working directory.",
                                "default": null
                            },
                            "env": {
                                "type": "object",
                                "description": "Additional environment variables.",
                                "default": []
                            },
                            "stdio": {
                                "type": "object",
                                "description": "Where to attach the program's stdio to: '*' = open a new terminal, '<path>' = attach to existing tty/fifo/etc (Linux and OSX only).",
                                "default": "*"
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop debuggee after launch.",
                                "default": true
                            },
                            "initCommands": {
                                "type": "array",
                                "description": "Initialization commands executed upon debugger startup.",
                                "default": []
                            },
                            "preRunCommands": {
                                "type": "array",
                                "description": "Commands executed just before the program is launched or attached to.",
                                "default": []
                            },
                            "sourceLanguages": {
                                "type": "array",
                                "description": "A list of source languages used in the program.",
                                "default": []
                            }
                        }
                    },
                    "attach": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Path of the program to attach to."
                            },
                            "pid": {
                                "type": "number",
                                "description": "Process id to attach to."
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop debuggee after launch.",
                                "default": true
                            },
                            "initCommands": {
                                "type": "array",
                                "description": "Initialization commands.",
                                "default": []
                            },
                            "preRunCommands": {
                                "type": "array",
                                "description": "Commands to execute after loading the program, but before it is started",
                                "default": []
                            },
                            "sourceLanguages": {
                                "type": "array",
                                "description": "A list of source languages used in the program.",
                                "default": []
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "name": "Debug",
                        "type": "lldb",
                        "request": "launch",
                        "program": "${workspaceRoot}/<your program>",
                        "args": []
                    }
                ]
            }
        ]
    }
}